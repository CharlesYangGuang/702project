<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapMyWorldPCL.View.Page20BucketList"
             BackgroundColor="#F5F1E8"
             NavigationPage.HasNavigationBar="False">
    <StackLayout Margin="30" Orientation="Vertical">
        <Label Text="My ultimate bucket list" TextColor="#512769" FontSize="22" FontAttributes="Bold"/>
        <BoxView BackgroundColor="#F5F1E8" HeightRequest="10"/>
        <Label Text="Think about: daily living, home, relationships, health and wellbeing, lifelong learning, work, social and community, and choice and control."/>
        <BoxView BackgroundColor="#F5F1E8" HeightRequest="10"/>
        <Label Text="If you had one ultimate wish, what would it be?" FontAttributes="Bold"/>
        <Label Text="Example: An overseas trip? Go on a hot air balloon? To get married?"/>
        <Editor Text="{Binding UltimateWish}" BackgroundColor="White" VerticalOptions="FillAndExpand"/>
        <StackLayout Orientation="Horizontal" >
            <Button Clicked="Button_Back" Text="Back" WidthRequest="80" HeightRequest="50" HorizontalOptions="StartAndExpand"/>
            <Button Clicked="OnSaveAndNext" Text="Next" HorizontalOptions="EndAndExpand" WidthRequest="80" HeightRequest="50"/>
        </StackLayout>
    </StackLayout>
</ContentPage>