<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MapMyWorldPCL.View.Page16MyDreamGoals"
             BackgroundColor="#F5F1E8"
             NavigationPage.HasNavigationBar="False">
        <AbsoluteLayout Margin="30">
        <Image Source="bubble.png" AbsoluteLayout.LayoutBounds="0.8,1,0.6,0.7" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional,HeightProportional"
            BackgroundColor="#F5F1E8"/>

        <StackLayout AbsoluteLayout.LayoutBounds="0,0.2,0.5,0.7" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional,HeightProportional">
            <Label Text="My Dreams and Goals" TextColor="#512769" FontSize="22"/>
            <Label Text=" In this section you'll think about what your ideal week would look like, and what you'd like your home life, your work, your education, and your independence to be like."
                   TextColor="Black" FontSize="18" VerticalOptions="FillAndExpand"/>
        </StackLayout>
        <Button Clicked="OnSaveAndNext" Text="Next Page" AbsoluteLayout.LayoutBounds="1,1,0.2,60" 
                AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"/>
        <Button Clicked="Button_Back" Text="Back"
                AbsoluteLayout.LayoutBounds="0,1,40,60" AbsoluteLayout.LayoutFlags="PositionProportional"/>
    </AbsoluteLayout>

</ContentPage>